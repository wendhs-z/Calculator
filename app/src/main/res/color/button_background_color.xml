<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#D6665E" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#00BCD4" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#2196F3" />
    <!--Default Background Color -->
    <item android:color="#BDD1E7" />
</selector>